*
	margin 0
	padding 0
body
	background-color white
.header_bg
	width 100%
	height 60px
	background-color #202028
	.header
		display flex
		justify-content space-between
		width 980px
		margin 0 auto
		span
			display inline-block
			height 60px
			vertical-align top
			line-height 60px
			font-size 24px
			color white
		a
			dispaly inline-block
			color white
			text-decoration none
			line-height 60px
			&:hover
				color #00b9ff
.content_bg
	padding-top 40px
	.content
		position relative
		width 980px
		height 690px
		margin 0 auto 40px
		text-align center
		background-color #202028
		button
			position relative
			width 30px
			height 60px
			background-color #202028
			border none
			color white
			border-radius 3px
			font-size 20px
			&:hover
				background-color rgba(0, 0, 0, 0.3)
		button:nth-child(1)
			left -440px
			top 220px
		button:nth-child(2)
			left 440px
			top 220px
		#show
			position relative
			left 65px
			top -20px
			width 850px
			height 300px
			text-align center
			font-size 30px
			padding-top 220px
		p
			display inline-block
			width 850px
			text-align center
			color white
		#page
			position absolute
			text-align right
			bottom 10px
			right 10px
			p
				display inline-block
				width 150px
